  <ThingDef ParentName="advancedToolBase">
    <defName>advancedTool_IndustrialChainsaw</defName>
    <label>chainsaw</label>
    <description>A powered cutting tool fitted with a rotating chain of teeth. Originally designed for felling trees, it can also be used to harvest plants.</description>
    <graphicData>
      <texPath>Things/Weapons/advancedChainsaw</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<statBases>
      <Mass>6.5</Mass>
	  <WorkToMake>15000</WorkToMake>
    </statBases>
	<costList>
      <Steel>60</Steel>
	  <Chemfuel>40</Chemfuel>
      <ComponentIndustrial>6</ComponentIndustrial>
    </costList>
	<equippedStatOffsets>
      <PlantWorkSpeed>0.80</PlantWorkSpeed>
      <ButcheryFleshSpeed>0.40</ButcheryFleshSpeed>
	  <MoveSpeed>-0.25</MoveSpeed>
    </equippedStatOffsets>
    <tools>
      <li>
        <label>blade</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>10</power>
        <cooldownTime>0.8</cooldownTime>
		<armorPenetration>0</armorPenetration>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.2</cooldownTime>
		<armorPenetration>0</armorPenetration>
      </li>
    </tools>
	<weaponTags>
      <li>AdvancedTool</li>
	  <li>Chainsaw</li>
    </weaponTags>
  </ThingDef>

